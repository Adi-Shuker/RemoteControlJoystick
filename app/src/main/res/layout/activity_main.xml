<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.joystickremotecontrol.view_model.ViewModel" />
    </data>
    <LinearLayout
        android:id="@+id/layout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.MainActivity"
        android:background="@drawable/airplane">
        
        <EditText
            android:id="@+id/editIP"
            android:layout_width="272dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Please enter your IP address"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="176dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
    
        <EditText
            android:id="@+id/editPort"
            android:layout_width="272dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Please enter your port"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="232dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
    
        <Button
            android:id="@+id/connectButton"
            android:layout_width="266dp"
            android:layout_height="50dp"
            android:text="Connect"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="287dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
    
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="20dp">
    
            <SeekBar
                android:id="@+id/throttle"
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="-105dp"
                android:layout_marginLeft="-105dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="335dp"
                android:max="200"
                android:progress="1"
                android:rotation="270"
                android:progressTint="@color/Navy"
                android:thumbTint="@color/Navy"/>
    
            <com.example.joystickremotecontrol.view.Joystick
                android:id="@+id/joystick"
                android:layout_width="270dp"
                android:layout_height="215dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="90dp"
                android:visibility="visible" />
    
            <SeekBar
                android:id="@+id/rudder"
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginEnd="31dp"
                android:layout_marginRight="31dp"
                android:layout_marginBottom="172dp"
                android:max="200"
                android:progress="1"
                android:progressTint="@color/Navy"
                android:thumbTint="@color/Navy"/>
    
        </RelativeLayout>
    </LinearLayout>
</layout>